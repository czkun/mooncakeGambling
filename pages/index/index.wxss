.index-btns{
  /*margin-top: 923rpx;*/
  margin-top: 64rpx;
  padding: 0 24rpx;
}
.index-btns .weui-flex__item{
  padding: 0 14rpx;
}
.index-btns .weui-flex__item .btn{
  position: relative;
  display: block;
  height: 71rpx;
  line-height: 65rpx;
  background-color: #ffb504;
  text-align: center;
  border-radius: 60rpx;
  font-size: 32rpx;
  color: #fff;
  border-bottom: #cf5300 6rpx solid;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

.bindMobile-box,.notice-box{
  position: absolute;
  top: 50%;
  background-color: #fff;
  left: 90rpx;
  right: 90rpx;
  margin-top: -216rpx;
}
.notice-box{
  margin-top: -50%;
}

.bindMobile-box-tt,.notice-box-tt{
  height: 70rpx;
  line-height: 70rpx;
  background-color: #ffb504;
  color: #fff;
  font-size: 30rpx;
  padding: 0 40rpx;
}
.notice-box-ct{
  padding: 30rpx;
  font-size: 28rpx;
}
.notice-box-ct text{
  width: 100%;
}
.bindMobile-box-form{
  padding: 47rpx 54rpx 48rpx;
}
.bindMobile-box-form .weui-flex{
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.bindMobile-box-form .weui-flex input{
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #a6a6a6;
  border: #a6a6a6 1px solid;
  border-radius: 10rpx;
  vertical-align: middle;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.bindMobile-box-form .weui-flex text{
  width: 7em;
  margin-left: 20rpx;
  text-align: center;
  background-color: #ffb504;
  border-radius: 10rpx;
  color: #fff;
}
.bindMobile-box-form .weui-flex text.gray{
  background-color: #ccc;
}

.bindMobile-box-form-btn,.notice-box-btn{
  font-size: 28rpx;
  margin-top: 40rpx;
  background-color: #ffb504;
  color: #fff;
}

.music{
  position: fixed;
  top: 30rpx;
  left: 30rpx;
  width: 60rpx;
  z-index: 2;
}
.rotate{
  animation: rotate 4s linear infinite
}

@keyframes rotate{
  0% {transform: rotate(0deg);}
  50% {transform: rotate(180deg);}
  100% {transform: rotate(360deg);}
}

.index-bowl{
  width: 428rpx;
  height: 428rpx;
  margin: 433rpx auto 0;
  border-radius: 50%;
}
.index-bowl navigator{
  display: block;
  height: 100%;
  border-radius: 50%;
}

.ad-box{
  margin-top: 20rpx;
}
.ad-tt{
  text-align: center;
  font-size: 32rpx;
  color: #f9ca5a;
}
.ad-tt:before,.ad-tt:after{
  content: '';
  border-bottom: 1px solid #f9ca5a;
  width: 50rpx;
  vertical-align: middle;
  display: inline-block;
  margin: 0 20rpx;
}
.ad-list{
  margin: 0 24rpx 20rpx ;
  padding: 24rpx 0 14rpx;
  border-radius: 10rpx;
}
.ad-list:after{
  display: table;
  content: '';
  clear: both;
}
.ad-list-item{
  float: left;
  width: 50%;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  padding: 0 12rpx;
  margin-bottom: 10rpx;
}
.ad-list-item navigator{
  display: block;
  background-color: #fff;
  padding: 10rpx 0;
}
.ad-list-item image{
  width: 100%;
  height: 70rpx;
  vertical-align: middle;
}

.cprt{
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  padding: 0 24rpx 16rpx;
}