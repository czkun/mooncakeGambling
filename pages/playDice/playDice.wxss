/* pages/playDice/playDice.wxss */
page,.container{
    width: 100%;
    height: 100%;
}
.playDice-bg{
    position: relative;
    width: 100%;
    height: 100%;
    background-size: 100% 100%;
}
.playDice-title{
    text-align: center;
    color: #000;
    font-size: 30rpx;
    height: 70rpx;
    line-height: 70rpx;
    background-color: #f9ca5a;
}
.playDice-title text{
    color: #cf5300;
}
.playDice-bowl{
    position: relative;
    margin: 30rpx 40rpx;
}
.playDice-bowl image{
    width: 100%;
}

.playDice-btns{
    padding: 0 80px;
}
.playDice-btns .btn{
    position: relative;
    display: block;
    height: 71rpx;
    line-height: 65rpx;
    background-color: #ffb504;
    text-align: center;
    border-radius: 60rpx;
    font-size: 32rpx;
    color: #fff;
    border-bottom: #cf5300 6rpx solid;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    margin-bottom: 30rpx;
}

.dice-box,.dice-list{
    position: absolute;
    top: 60rpx;
    left: 80rpx;
    right: 60rpx;
    bottom: 60rpx;
}

.dice-box .dices{
    margin-top: 60rpx;
}

.dice-list .dice{
    position: absolute;
    width: 60rpx;
}
.dice-list .dice1{
    left: 130rpx;
    top: 148rpx;
}
.dice-list .dice2{
    left: 268rpx;
    top: 148rpx;
}
.dice-list .dice3{
    left: 304rpx;
    top: 218rpx;
}
.dice-list .dice4{
    left: 129rpx;
    top: 252rpx;
}
.dice-list .dice5{
    left: 210rpx;
    top: 266rpx;
}
.dice-list .dice6{
    left: 282rpx;
    top: 320rpx;
}


.result{
    width: 577rpx;
    margin: 0 auto;
}
.result-bg{
    width: 100%;
}
.result-box{
    background-color: #fff;
    margin: -30rpx 30rpx 0;
    padding: 0 45rpx 36rpx;
    text-align: center;
    border-radius: 0 0 30rpx 30rpx;
}
.result-box-tt{
    position: relative;
    font-size: 44rpx;
    color: #ffe02e;
    margin-top: -114rpx;
}
.result-box-tt .close{
    position: absolute;
    right: -20rpx;
    font-size:70rpx;
    color:#fff;
    top: -28rpx;
}
.result-box-ct1{
    font-size: 32rpx;
    color: #333333;
    line-height: 40rpx;
    padding-top: 34rpx;
}
.result-box-imgs{
    margin: 26rpx 0;
    height: 40rpx;
}
.result-box-imgs image{
    width: 40rpx;
    margin: 0 2rpx;
}
.result-box-ct2{
    font-size: 32rpx;
    color: #e63333;
    line-height: 40rpx;
    margin-bottom: 24rpx;
}
.result-box-ct3{
    font-size: 32rpx;
    color: #e63333;
    line-height: 40rpx;
    padding-top: 28rpx;
    border-top: #d1d1d1 1px solid;
}
.result-box-logo{
    width: 270rpx;
    display: inline-block;
}
.result-box-logo image{
    width: 100%;
    margin-top: 24rpx;
}


.finish{
    position: absolute;
    top: 50%;
    background-color: #fff;
    left: 90rpx;
    right: 90rpx;
    margin-top: -224rpx;
    text-align: center;
}
.finish-tt{
    position: relative;
    height: 74rpx;
    line-height: 74rpx;
    background-color: #ffb504;
    color: #fff;
    font-size: 30rpx;
    padding: 0 16rpx;
}
.finish-tt .close{
    position: absolute;
    right: 20rpx;
    font-size: 50rpx;
}
.finish-box{
    padding-bottom: 70rpx;
}
.finish-box .finish-box-ct1{
    font-size: 40rpx;
    color: #3b3b3b;
    line-height: 48rpx;
    margin-top: 70rpx;
}
.finish-box-btn{
    height: 62rpx;
    line-height: 62rpx;
    background-color: #ffb504;
    width: 210rpx;
    color: #fff;
    border-radius: 60rpx;
    margin-top: 60rpx;
    margin-bottom: 26rpx;
    font-size: 32rpx;
}
.finish-box .finish-box-ct2{
    font-size: 24rpx;
    color: #939393;
}